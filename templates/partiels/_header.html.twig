<header class="p-3 mb-3 border-bottom bg-white">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="{{ path('app_project') }}" class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
            <h3>ProjectX</h3>
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="{{ path('app_project') }}" class="nav-link px-2 link-secondary">Projects</a></li>
          {% if is_granted('ROLE_ADMIN') %}
          <li><a href="{{ path('app_user') }}" class="nav-link px-2 link-dark">Users</a></li>
          <li><a href="{{ path('app_project_add') }}" class="nav-link px-2 link-dark">New Project</a></li>
          {% endif %}
        </ul>

        {% for type,messages in app.flashes(['success','danger','info']) %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} temp-alert" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3 dropdown">
          <input type="search" class="form-control search-input" placeholder="Search..." aria-label="Search">
        </form>

        <div class="dropdown text-end">
          <a href="#" class="d-block link-dark text-decoration-none" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
            {% if app.user.image %}
            <img src="{{ asset('assets/images/users/' ~ app.user.image )}}" alt="user" width="32" height="32" class="rounded-circle">
            {% else %}
            <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle">
            {% endif %}
          </a>
          <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
            {% if is_granted('ROLE_ADMIN') %}
            <li><a class="dropdown-item" href="{{ path('app_project_add') }}">New project...</a></li>
            <li><a class="dropdown-item btn-edit-profile" href="javascript:void(0)">Profile</a></li>
            <li><hr class="dropdown-divider"></li>
            {% endif %}
            <li><a class="dropdown-item" href="{{ path('app_logout') }}">Sign out</a></li>
          </ul>
        </div>
      </div>
    </div>
</header>